    $(function () {
        var btmWidth = $(".part1").width() / 2;
        $(".part1").css("height", btmWidth);
        $(".part2").css("height", btmWidth);
        $(".part3").css("height", btmWidth);
        $(".scoreTxt").css("padding-top", btmWidth / 2 - 20);
    })
